# Enable Kerberos
sudo firewall-cmd --add-service=kerberos

# Enable LDAP and LDAPS
sudo firewall-cmd --add-service=ldap
sudo firewall-cmd --add-service=ldaps

# Enable Global Catalog
sudo firewall-cmd --add-port=3268/tcp
sudo firewall-cmd --add-port=3269/tcp

# Enable SMB
sudo firewall-cmd --add-service=samba-client
